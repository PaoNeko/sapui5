<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Panel id="idPanel"
        headerText="{i18n>panelFrTitle}"
        class="sapUiResponsiveMargin"
        width="50%">

        <content>
            <form:SimpleForm 
                id="idSimpleForm" 
                editable="true">
                <form:content>
                    <Label id="idLabel1" text="{i18n>labelName}"/>
                    <Input id="idInput1"/>

                    <Label id="idLabel2" text="{i18n>lastName}"/>
                    <Input id="idInput2"/>
                </form:content>
            </form:SimpleForm>
        </content>
    
    </Panel>

</core:FragmentDefinition>