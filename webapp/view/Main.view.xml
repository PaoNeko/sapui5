<mvc:View 
        controllerName="com.logaligroup.invoices.controller.Main"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel 
            id="panel"
            headerText="{i18n>helloPanel}">
                <content>
                    <Button 
                    id="button2"
                    text="{i18n>showHelloButtonText}"
                    type="Accept"
                    press="onShowMessage"/>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
